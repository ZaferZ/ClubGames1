@model AdminUserVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-10">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <!-- Adjust the column width to your preference, e.g., col-lg-10 -->
            <div class="card">
                <div class="card-header">
                    <h4>User List</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <!-- Add a responsive wrapper for the table -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Points</th>
                                    <th>IsAdmin</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (User u in Model.Users)
                                {
                                    <tr>
                                        <td>@u.Id</td>
                                        <td>@u.UserName</td>
                                        <td>@u.Name</td>
                                        <td>@u.Email</td>
                                        <td>@u.Password</td>
                                        <td>@u.Points</td>
                                        <td>@u.IsAdmin</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm"
                                           asp-route-id="@u.Id"
                                           asp-action="Edit"
                                           asp-controller="User">Edit</a>
                                        </td>
                                        <td>
                                            <a asp-route-id="@u.Id"
                                           asp-action="Delete"
                                           asp-controller="User"
                                           class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }

                                <!-- Add more rows for additional users -->
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="User" asp-action="Create">Create User</a>
                </div>
            </div>
        </div>
    </div>
</div>


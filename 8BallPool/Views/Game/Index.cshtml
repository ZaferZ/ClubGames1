@model ShowGameVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Posts</h2>

@foreach (var post in Model.Games)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@post.ImagePath" class="card-img" alt="Post Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@post.Name</h5>
                    <p class="card-text">@post.Description</p>
                </div>
            </div>
        </div>
    </div>
}
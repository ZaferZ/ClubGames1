@model AddVm
<div class="container mt-5">
    <h1 class="display-3">Create Table</h1>
    <form id="userCreationForm" method="post">
        <div class="form-group">
            <label for="cars">Game:</label>
            <select id="cars" name="GameId">
                @foreach (var item in Model.Games)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="priceForHour">Number of players:</label>
            <input type="number" class="form-control" id="priceForHour" name="NumberPlayers" min="0" step="0.01" required>
        </div>
           <div class="form-group">
            <label for="priceForHour">Table number:</label>
            <input type="number" class="form-control" id="priceForHour" name="TableNumber" min="0" step="0.01" required>
        </div>


            <button type="submit" class="btn btn-primary" onclick="submitForm()">Create Reservation</button>
    </form>
</div>